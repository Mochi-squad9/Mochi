<div class="col s12 m6 l4">
    <div class="card">
        <div class="card-image">
          <% if (student.std_grade == "Ensino fundamental I (1° até 5°ano)") { %>
            <img style="height: 160px; padding: 10px;" class="responsive-img" src="../assets/mochi.svg">
          <% } else if (student.std_grade == "Ensino fundamental II (6° até 9° ano)") { %>
            <img style="height: 160px; padding: 10px;" class="responsive-img" src="../assets/red_mochi.svg">
          <% } else { %>
            <img style="height: 160px; padding: 10px;" class="responsive-img" src="../assets/yellow_mochi.svg">
          <% } %>

            <a id=button class="open-modal-button btn-floating halfway-fab waves-effect waves-light btn modal-trigger ambar" href="<%= "#" + student.id %>"><i
                    class="material-icons black-text">visibility</i></a>
        </div>
        <div class="card-content grey lighten-1">
            <h5><b> <%= student.std_name %> <%= student.std_nickname %> </b></h5>
            <p><i class="material-icons icon-center">school</i> <%= student.std_grade %></p>
        </div>
    </div>
</div>
