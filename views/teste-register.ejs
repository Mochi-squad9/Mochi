<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/teste-materialize.css">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <title>Materialize</title>

    <style>

        .mb {
            margin-bottom: 50px;
        }

        .btn {
            margin-top: 25px;
        }

        .form-control {
            margin: 100px auto;
            width: 75%;
            min-width: 320px;
        }

        @media only screen and (max-width: 600px) {
            .form-control { width: 100%; }
        }

        
        /* Hide all steps by default: */
        .tab {
            display: none;
        }

        /* Make circles that indicate the steps of the form: */
        .step {
            height: 15px;
            width: 15px;
            margin: 0 2px;
            background-color: #bbbbbb;
            border: none;
            border-radius: 50%;
            display: inline-block;
            opacity: 0.5;
        }

        /* Mark the active step: */
        .step.active {
            opacity: 0.8;
        }

        /* Mark the steps that are finished and valid: */
        .step.finish {
            background-color: #FFC93C;
        }

        #scroll {
            overflow: auto;
            max-height: 400px;
        }
    </style>
</head>

<body class="grey lighten-1">

    <div class="container">

        <form action="" class="row form-control">

            <div class="col s12">
                <div class="card-panel z-depth-3">

                     <!-- Circles which indicates the steps of the form: -->
                     <div style="text-align:right;">
                        <span class="step"></span>
                        <span class="step"></span>
                        <span class="step"></span>
                    </div>

                    <!-- One "tab" for each step in the form: -->
                    <div class="tab">
                        <div class="row">
                            <h4 class="mb"><b>Dados do responsável</b></h4>
                            
                            <% if (fields[0].length) { %>
                                <% fields[0].forEach(guardian => { %>
              
                                  <div class="input-field col s6">
                                    <input type="<%= guardian.type %>" name="<%= guardian.name %>" id="<%= guardian.id %>"
                                      placeholder="<%= guardian.placeholder %>" class="validate">
                                    <label for="last_name">
                                      <%= guardian.label %>
                                    </label>
                                  </div>
              
                                <% }) %>
                            <% } %>

                        </div>
                    </div>
    
                    <div class="tab">
                        <div class="row">
                            <h4 class="mb"><b>Dados do estudante</b></h4>
                            <% fields[1].forEach(student => { %>
                                <% if (String(student.name)=="std_grade" ) { %>
                                    <div class="input-field col s6">
                                        <select id="<%= student.id %>">
                                            <option value="" disabled selected>
                                                <%= student.label %>
                                            </option>
                                            <% student.options.forEach(grade => { %>
                                                <option value="<% grade.toString() %>">
                                                    <%= grade.toString() %>
                                                </option>
                                            <% }) %>
                                        </select>

                                        <label><%= student.label %></label>
                                    </div>
                                <% } else { %>
                                    <div class="input-field col s6">
                                        <input type="<%= student.type %>" name="<%= student.name %>" id="<%= student.id %>" placeholder="<%= student.placeholder %>" class="validate">

                                        <label for="last_name"><%= student.label %></label>
                                    </div>
                                <% } %>
                            <% }) %>

                            <% if (fields[2].length) { %>
                                <% fields[2].forEach((school)=> { %>
                                  <div class="input-field col s6">
                                    <input type="<%= school.type %>" name="<%= school.name %>"
                                      id="<%= school.id %>" placeholder="<%= school.placeholder %>" class="validate">
                                    <label for="">
                                      <%= school.label %>
                                    </label>
                                  </div>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>

                    <div class="tab">
                        <div class="row">
                            <h5 class="mb"><b>O que falta na sua mochila?</b></h5>
                            
                            <div class="col s12" id="scroll">
                                <ul class="collection">
                                    <% if (materials.length) { %>
                                        <% materials.forEach(material => { %>
                                            <li id="<%= material.Codigo %>" onclick="select('<%= material.Codigo %>')" class="collection-item avatar">

                                                <img src="<%= material.image %>" alt="" class="circle">

                                                <h6><b><%= material.Grupo %></b></h6>

                                                <label class="secondary-content">
                                                    <input id="input_<%= material.Codigo %>" type="checkbox"
                                                    onclick="event.stopImmediatePropagation();" name="<%= material.Codigo %>" autocomplete="off" />
                                                    <span></span>
                                                </label>
                                            </li>
                                        <% }) %>
                                    <% } %>
                                </ul>
                            </div>

                        </div>
                    </div>
    
                </div>

                <div style="float: left;">
    
                    <button type="button" class="waves-effect waves-light btn-large grey white-text" id="prevBtn" onclick="nextPrev(-1)">Anterior</button>
    
                    <button type="button" class="waves-effect waves-light btn-large black white-text" id="nextBtn"
                    onclick="nextPrev(1)">Próximo</button>

                    <button type="submit" class="waves-effect waves-light btn-large amber" id="submitBtn" onclick="event.preventDefault();registerForm()" name="action">Enviar
                        <i class="material-icons right">send</i>
                    </button>
    
                </div>
    
            </div>

        </form>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/inputCheckSeletion.js"></script>
    <script src="/js/jquery.mask.min.js"></script>
    <script src="/js/inputMask.js"></script>
    <script src="/js/sendRegister.js"></script>
    <script src="/js/multiForm.js"></script>
    <script src="/js/materialize.min.js"></script>
    <script>
        M.AutoInit();
    </script>
</body>

</html>