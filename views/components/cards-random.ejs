<div class="col s12 m6 l4">
    <div class="card">
        <div class="card-image">
            <img
                src="https://s2.glbimg.com/uQ930f0FX-hPF9EV0w_G8o_Vn7I=/0x0:961x518/984x0/smart/filters:strip_icc()/i.s3.glbimg.com/v1/AUTH_59edd422c0c84a879bd37670ae4f538a/internal_photos/bs/2019/j/K/gBh3gLSHe3dxIWb27rZQ/primoferreiraescola.jpg">
        </div>

        <div class="card-content grey lighten-1">
            <h5><b>
                    <% if(school.school_name.length>=35){ %>
                        <%= school.school_name.substring(0, 35) + "..." %>
                            <% } else {%>
                                <%= school.school_name %>
                                    <% } %>
                </b></h5>
            <p><i class="material-icons icon-center">fmd_good</i>
                <%= school.city %>
            </p>
        </div>

        <div class="card-action">
            <div class="row">
                <div class="col s12 m12 l12 xl6">

                    <% ttl_std.forEach((total)=> { %>

                        <% if (total.school_id==school.school_id) { %>
                            <h5><b>
                                    <%= total.total_std%> mochilas
                                </b>
                                <% }%>
                                    <% })%>
                                        <span style="font-size: 14px;">precisam da sua doação</span>
                            </h5>
                </div>

                <div class="col s12 m12 l12 xl6">
                    <a href="/alunos?id=<%=school.school_id%>&city_id=<%=school.city_id%>"
                        class="btn btn-align-center">Quero
                        doar</a>
                </div>
            </div>
        </div>
    </div>
</div>